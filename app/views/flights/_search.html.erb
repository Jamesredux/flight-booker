
<div class="container-fluid">
	<div class="row search">
	
		<div class="col-sm-6 col-sm-offset-3 well">
			<h3>Search Flights</h3>

				<%= form_tag("/", method: "get") do %>
		
				<div  class="row  airport-select">
					
					<div class="form-group col-md-6 rm-p">
						<%= label_tag(:from_airport, "From:") %>
						<%= select_tag(:from_airport, options_for_select(@airports)) %>
					</div>

					<div class="form-group col-md-6"> 
						<%= label_tag(:to_airport, "To:") %>
						<%= select_tag(:to_airport, options_for_select(@airports)) %>
					</div>
				
				</div>	
		
				<div class="row date-party">

					<div class="form-group col-md-6 rm-p">
						<%= label_tag(:chosen_date, "Date:") %>
						<%= select_tag(:chosen_date, options_for_select(@flight_days)) %>
					</div>

					<div class="form-group col-md-6">
						<%= label_tag(:party_size, "Passengers:") %>
						<%=  select_tag(:party_size, options_for_select(@passenger_options)) %>
					</div>

				</div>	

				<div class="btn btn-lg">
					
					<%= submit_tag("Search Flights", :class=>"submit-button") %>
				
				</div>

				<% end %>
		
		</div>
	</div>
</div>


