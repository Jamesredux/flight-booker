<% if @booking %>


Your booking ref is: <%= @booking.id %>



<div class="row passenger_details">
		<div class="col-md-9 col-md-offset-3">

			<div class="row">
				<h2>Passenger Details</h2>

			<div class="col-md-12 flight_details"></div>
				<div class="panel-body">
					<table class="table">
						<thead>
							<tr>
								<th>Flight Number</th>
								<th>From</th>
								<th>Destination</th>
								<th>Departure Date</th>
								<th>Departure Time</th>
								<th>Number of Passengers</th>
							</tr>
						</thead>

						<tbody>
							<tr>
								<td><%=  @flight.id  %></td>
								<td><%=  @flight.from_airport.name  %></td>
								<td><%=  @flight.to_airport.name  %></td>
								<td><%=  @flight.dep_time.strftime( "%a %d %b  %Y")  %></td>
								<td><%=  @flight.dep_time.strftime( "%H:%M")  %></td>
								<td><%= @booking.passenger_ids.count %></td>
							</tr>
						</tbody>
					</table>
				</div>	
			</div>
		</div>
</div>


<% @passengers.each do |passenger|%>
	<ul>
		<li><%= passenger.name %></li>
		<li><%= passenger.email %></li>
		<li><%= passenger.passport_no %></li>
	</ul>
<% end %>	 


<% else %>

 Sorry. No booking matches that reference
	<div class="container search">

<%= form_tag(bookings_show_path, method: "get") do %>
		
		<div class="row search_booking">
		

<div class="col-md-3 ">
				
				<%= label_tag(:id, "Booking Ref") %>
				<%= text_field_tag(:id) %>
				<%= submit_tag("Search") %>
			</div>
		</div>
		
			
			
	
	<% end %>
</div>


<% end %>	