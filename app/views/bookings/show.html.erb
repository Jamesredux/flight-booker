<% if @booking %>





<div class="row flight_details">
		<div class="col-md-9 col-md-offset-3">

			<div class="row">
				<h2>Your booking ref is: <%= @booking.id %></h2>

			

			<div class="col-md-12 flight_details"></div>
				<div class="panel-body">
					<table class="table">
						<thead>
							<tr>
								<th>Flight Number</th>
								<th>From</th>
								<th>Destination</th>
								<th>Departure Date</th>
								<th>Departure Time</th>
								<th>Duration</th>
								<th>Number of Passengers</th>
							</tr>
						</thead>

						<tbody>
							<tr>
								<td><%=  @flight.id  %></td>
								<td><%=  @flight.from_airport.name  %></td>
								<td><%=  @flight.to_airport.name  %></td>
								<td><%=  @flight.dep_time.strftime( "%a %d %b  %Y")  %></td>
								<td><%=  @flight.dep_time.strftime( "%H:%M")  %></td>
								<td><%= distance_of_time_in_words(@flight.duration.minutes) %></td>
								<td><%= @booking.passenger_ids.count %></td>
							</tr>
						</tbody>
					</table>
				</div>	
			</div>
		</div>
</div>
<div class="row passenger_details">
	<h2>Passenger Details</h2>	


<div class="col-md-12 passenger_details"></div>
				<div class="panel-body">
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Name</th>
								<th>Email</th>
							</tr>
						</thead>

						<tbody>
							<% pass_numb = 1 %>
							<% @passengers.each do |passenger|%>
								<tr>
									<td><%= pass_numb %></td>
									<td><%=  passenger.name %></td>
									<td><%=  passenger.email  %></td>
								</tr>
								<% pass_numb += 1 %>
							<% end %>	
						</tbody>
					</table>
				</div>	
			</div>




<% else %>

 Sorry. No booking matches that reference
		
	<%=	render 'booking_ref_search' %>


<% end %>	